{
    // Editor settings
    "editor.autoIndent": true,
    //"editor.fontFamily": "Ricty for Powerline",
    //"editor.fontSize": 16,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "editor.renderControlCharacters": true,
    "editor.renderFinalNewline": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    // Emmet settings
    "emmet.includeLanguages": {
        "vue-html": "html",
        "javascript": "javascriptreact",
        "visualforce": "html"
    },
    "emmet.triggerExpansionOnTab": true,
    // Files settings
    "files.autoSave": "off",
    "files.associations": {
        "*.page": "visualforce"
    },
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    // Git settings
    "git.autofetch": true,
    // Workbench settings
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    // Terminal settings
    "terminal.integrated.env.windows": {
        "NODE_ENV": "development"
    },
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    // Typescript settings
    "typescript.locale": "ja",
    "typescript.updateImportsOnFileMove.enabled": "always",
    // SalesforceDX Code Companion extension settings
    "dx-code-companion.autosave.enabled": true,
    "dx-code-companion.manageconflict.enabled": true,
    // SFDX extension settings
    "salesforcedx-vscode-core.enable-sobject-refresh-on-startup": true,
    "salesforcedx-vscode-core.push-or-deploy-on-save.enabled": false,
}
